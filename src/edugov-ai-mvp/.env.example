# EduGov.AI Environment Configuration
# Copy this file to .env.local and fill in your values

# Application Configuration
NODE_ENV=development
APP_VERSION=1.0.0
NEXT_PUBLIC_APP_NAME="EduGov.AI"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/edugov_ai?schema=public"
SHADOW_DATABASE_URL="postgresql://username:password@localhost:5432/edugov_ai_shadow?schema=public"

# Auth0 Configuration
AUTH0_SECRET='your-auth0-secret-key-minimum-32-characters'
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.edugov.ai

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
HUGGING_FACE_API_KEY=hf_your-hugging-face-token

# Government Integration APIs
SIAPE_API_ENDPOINT=https://api.siape.gov.br
SIAPE_API_KEY=your-siape-api-key
SINTEGRA_API_ENDPOINT=https://api.sintegra.gov.br
SINTEGRA_API_KEY=your-sintegra-api-key
RECEITA_API_ENDPOINT=https://api.receita.fazenda.gov.br
RECEITA_API_KEY=your-receita-api-key

# AWS Configuration (for production)
AWS_REGION=sa-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=edugov-ai-content-brazil
AWS_CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@edugov.ai
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL_ADDRESS=EduGov.AI <noreply@edugov.ai>

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
GOOGLE_ANALYTICS_ID=GA-your-tracking-id

# LGPD Compliance
LGPD_COMPLIANCE_MODE=strict
AUDIT_LOGGING=enabled
DATA_LOCALIZATION=brazil-only
ANPD_NOTIFICATION_ENDPOINT=https://api.anpd.gov.br/notifications

# Security Configuration
ENCRYPTION_KEY=your-256-bit-encryption-key-for-sensitive-data
JWT_SECRET=your-jwt-secret-for-additional-tokens
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Feature Flags
FEATURE_AI_CONTENT_GENERATION=true
FEATURE_GOVERNMENT_INTEGRATION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_CERTIFICATION_ENGINE=true

# Development Tools
PRISMA_STUDIO_PORT=5555
NEXT_TELEMETRY_DISABLED=1

# Government Compliance
GOV_COMPLIANCE_LEVEL=federal
DATA_RETENTION_DEFAULT_DAYS=1825
AUTOMATIC_CONSENT_EXPIRY_DAYS=730

# API Rate Limits
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000
API_RATE_LIMIT_PER_DAY=10000

# Content Delivery
CDN_BASE_URL=https://cdn.edugov.ai
CONTENT_ENCRYPTION_ENABLED=true
CONTENT_BACKUP_RETENTION_DAYS=2555